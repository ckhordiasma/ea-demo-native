<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <GridLayout rows="auto, auto">
        <Image width="300" height="300" src="{{ Image }}" />
        <GridLayout row="1" rows="auto, auto, auto" columns="*, *" >
            <Label text="Name" cssClass="form-label" />
            <Label col="1" text="{{Name}}" cssClass="form-field" />
            <StackLayout colSpan="2" cssClass="form-item-border" />

            <Label row="1" text="Breed" cssClass="form-label" />
            <Label row="1" col="1" text="{{Breed}}" cssClass="form-field" />
            <StackLayout row="1" colSpan="2" cssClass="form-item-border" />
            
            <Label row="2" text="Height" cssClass="form-label" />
            <Label row="2" col="1" text="{{Height}}" cssClass="form-field" />
            <StackLayout row="2" colSpan="2" cssClass="form-item-border" />
       </GridLayout>

    </GridLayout>
</Page>