<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <StackLayout>

        <StackLayout>

            <GridLayout columns="auto, *" rows="auto, auto" cssClass="form-item">
                <StackLayout height="50" row="1" colSpan="2" />
                <Label text="First Name" cssClass="label" col="0" row="1" />
                <TextField col="1" row="1" />
            </GridLayout>
            
            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <GridLayout columns="auto, *" rows="auto, auto" cssClass="form-item">
                <StackLayout height="50" row="1" colSpan="2" />
                <Label text="Last Name" cssClass="label" col="0" row="1" />
                <TextField col="1" row="1" />
            </GridLayout>
            <StackLayout cssClass="form-item-border" height="1"></StackLayout>

            <GridLayout columns="auto, *" rows="auto, auto" cssClass="form-item">
                <StackLayout height="50" row="1" colSpan="2" />
                <Label text="Cell Number" cssClass="label" col="0" row="1" />
                <TextField col="1" row="1" />
            </GridLayout>
            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- profileInputPageModel additional fields -->


            <GridLayout columns="*, *" rows="auto" cssClass="form-buttons">

                <widgets:button text="Cancel" tap="onprofileInputPageModelFormCancel" />
                <widgets:button col="1" text="Confirm" tap="onprofileInputPageModelFormSubmit" />

            </GridLayout>
        </StackLayout>
        <!-- additional view content -->

        <!-- START_CUSTOM_CODE_profileInputPage -->
        <!-- Add custom code here. For more information about custom code, see http://docs.telerik.com/platform/screenbuilder/troubleshooting/how-to-keep-custom-code-changes -->

        <!-- END_CUSTOM_CODE_profileInputPage -->
    </StackLayout>
</Page>